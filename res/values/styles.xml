<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Divider">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1px</item>
		<item name="android:background">@color/Viewc2</item>
	</style>
    
    <style name="Progress">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:maxWidth">50.0dip</item>
		<item name="android:maxHeight">50.0dip</item>
		<item name="android:minWidth">50.0dip</item>
		<item name="android:minHeight">50.0dip</item>
	</style>
    
    <style name="Dialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowIsTranslucent">false</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
		<item name="android:backgroundDimEnabled">true</item>
	</style>
	
    <style name="TextBase">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
    
    <style name="TextDetail.Top" parent="TextBase">
		<item name="android:textColor">@color/text292929</item>
		<item name="android:textSize">@dimen/s_13sp</item>
		<item name="android:layout_marginTop">12dp</item>
	</style>
</resources>
