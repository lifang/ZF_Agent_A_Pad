<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="460dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/close"
                android:layout_width="@dimen/dlimg"
                android:layout_height="@dimen/dlimg"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/zc_margin_top"
                android:background="@drawable/lgclose"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="配货"
                android:textColor="#292929"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#484849" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/textbig"
            android:orientation="vertical"
            android:paddingLeft="@dimen/zc_land_h"
            android:paddingRight="@dimen/zc_land_h" >

           
            
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="选择从下级代理商"
                    android:layout_marginTop="20dp"
                    android:textColor="#5C5C5C" />

                <Spinner
                    android:id="@+id/sp_chooseagent"
                    android:layout_width="350dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ed_adress"
                    android:maxWidth="@dimen/zc_margin_top"
                    android:text="上海大"
                    android:paddingBottom="8dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="20dp"
                    android:singleLine="true"
                    android:textSize="@dimen/textbig"
                    android:layout_marginTop="10dp" />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="选择终端号"
                    android:layout_marginTop="20dp"
                    android:textColor="#5C5C5C" />

                <TextView
                    android:id="@+id/tv_choose_terminal"
                    android:layout_width="350dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ed_adress"
                    android:maxWidth="@dimen/zc_margin_top"
                    android:text="1234567890"
                    android:paddingBottom="8dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="20dp"
                    android:singleLine="true"
                    android:textSize="@dimen/textbig"
                    android:layout_marginTop="10dp" />
            <Button 
                android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="确认"
                     android:background="@drawable/bg_blue_shape"
                    android:textColor="@color/fffefe"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="50dp" />
            
        </LinearLayout>
        
            
    </LinearLayout>

    </LinearLayout>