<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_back" />

    <LinearLayout
        android:id="@+id/list_title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/e9e8e8"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/titilepad"
        android:paddingRight="@dimen/titilepad" >

        <TextView
            android:id="@+id/dataTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="用户名"
            android:textColor="@color/text292929"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="手机"
            android:textColor="@color/text292929"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="邮箱"
            android:textColor="@color/text292929"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/stateTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="创建日期"
            android:textColor="@color/text292929"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text292929"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/titilepad"
        android:layout_marginRight="@dimen/titilepad"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/eva_nodata"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@color/ffffff"
            android:orientation="horizontal"
            android:visibility="gone" >

            <include layout="@layout/include_norecord" />
        </LinearLayout>

        <com.comdo.zf_agent_a_pad.util.XListView
            android:id="@+id/x_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="6dp"
            android:background="@color/white"
            android:fadingEdge="none"
            android:scrollbars="none" />
    </LinearLayout>

</LinearLayout>