<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_myinfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg"
        android:orientation="vertical"
        android:paddingTop="14dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_jichuinfo"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@drawable/tab_bg"
                android:gravity="center"
                android:text="基础信息"
                android:textColor="#727171"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_safe"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="安全"
                android:textColor="#727171"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_manageradress"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="地址管理"
                android:textColor="#727171"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_baseinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:id="@+id/sLV"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="40dp" >

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="代理商类型:"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_company_type"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="30dp"
                            android:gravity="center_vertical"
                            android:textSize="20sp" />
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="40dp" >

                    <TableRow>

                        <TextView
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:text="公司名称"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_company_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/text6c6c6c6"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow android:layout_marginTop="40dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:text="公司营业执照登记号"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_yingyezhizhao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/text6c6c6c6"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow android:layout_marginTop="40dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:text="公司税务登记证号"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_company_shuiwudengji"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/text6c6c6c6"
                            android:textSize="20sp" />
                    </TableRow>
                </TableLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="40dp"
                    android:background="#DAD8D9" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="40dp" >

                    <TableRow>

                        <TextView
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:text="负责人姓名"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_fuzeren_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/text6c6c6c6"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow android:layout_marginTop="40dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:text="负责人身份证号"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_fuzeren_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/text6c6c6c6"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow android:layout_marginTop="40dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:text="手机"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/text6c6c6c6"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_phone_xg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:gravity="center_vertical"
                            android:text="去修改"
                            android:textColor="@color/bgtitle"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow android:layout_marginTop="40dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:text="邮箱"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/text6c6c6c6"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_email_xg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:gravity="center_vertical"
                            android:text="去修改"
                            android:textColor="@color/bgtitle"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow android:layout_marginTop="40dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:text="所在地"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_adress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/text6c6c6c6"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow android:layout_marginTop="40dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:text="详细地址"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_adressdetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/text6c6c6c6"
                            android:textSize="20sp" />
                    </TableRow>
                </TableLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="40dp"
                    android:background="#DAD8D9" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="40dp" >

                    <TableRow>

                        <TextView
                            android:layout_width="190dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:text="身份证照片"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/iv_shenfenzheng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/check_it" />
                    </TableRow>

                    <TableRow android:layout_marginTop="40dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:text="营业执照照片"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/iv_yingyezhizhao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/check_it" />
                    </TableRow>

                    <TableRow android:layout_marginTop="40dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:text="税务登记证照片"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/iv_shuiwu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/check_it" />
                    </TableRow>
                </TableLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="40dp"
                    android:background="#DAD8D9" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="40dp" >

                    <TableRow>

                        <TextView
                            android:layout_width="190dp"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:text="用户名"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_id_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="30dp"
                            android:gravity="center_vertical"
                            android:text="动感科技"
                            android:textColor="@color/text6c6c6c6"
                            android:textSize="20sp" />
                    </TableRow>
                </TableLayout>

                <Button
                    android:id="@+id/btn_exit"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="100dp"
                    android:layout_marginTop="40dp"
                    android:background="#006FD5"
                    android:text="退出"
                    android:textColor="#E0EbF7" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_chpaw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="32dp" >

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="原密码"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_oldpaw"
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/tv_bg"
                    android:inputType="textPassword" />
            </TableRow>

            <TableRow android:layout_marginTop="40dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="新密码"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_newpaw"
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/tv_bg"
                    android:inputType="textPassword" />
            </TableRow>

            <TableRow android:layout_marginTop="40dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="确认密码"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_confirmpaw"
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/tv_bg"
                    android:inputType="textPassword" />
            </TableRow>

            <TableRow android:layout_marginTop="50dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@color/bgtitle"
                    android:gravity="center"
                    android:text="保存"
                    android:textColor="@color/white"
                    android:textSize="22sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="40dp"
            android:background="#E9E8E8"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="收货人"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="所在地区"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="详细地址"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="邮编"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="电话"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
        </LinearLayout>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/bgtitle"
            android:gravity="center"
            android:text="新增地址"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>