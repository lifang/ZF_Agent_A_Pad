<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/titleback_height"
        android:background="@color/bgtitle"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/titilepad"
        android:paddingRight="@dimen/titilepad" >

        <LinearLayout
            android:id="@+id/titleback_linear_back"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/margin_left"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/titleback_image_back"
                android:layout_width="22dp"
                android:layout_height="28dp"
                android:background="@drawable/back" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d_7dp"
            android:layout_toRightOf="@id/titleback_linear_back"
            android:gravity="center_vertical"
            android:text="返回"
            android:textColor="@color/fffefe"
            android:textSize="@dimen/s_19sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/titleback_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="2222"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/next_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:gravity="right"
            android:singleLine="true"
            android:text="设置分润"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:background="#ffffff"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="32dp" >

                <TableRow>

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:text="代理商类型:"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_company_type"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40dp"
                        android:text="11111111111"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:text="开通分润"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/iv_fenrun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/row_company_name"
                    android:layout_marginTop="20dp"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="公司名称"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:text="11111111111"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/row_yingyezhizhao"
                    android:layout_marginTop="40dp"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="公司营业执照登记号"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_yingyezhizhao"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:text="11111111111"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/row_company_shuiwudengji"
                    android:layout_marginTop="40dp"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="公司税务登记证号"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_company_shuiwudengji"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:text="11111111111"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="20sp" />
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="100dp"
                android:background="#DAD8D9" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="32dp" >

                <TableRow android:layout_marginTop="40dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="负责人姓名"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_fuzeren_name"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:text="11111111111"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow android:layout_marginTop="40dp" >

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="负责人身份证号"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_fuzeren_no"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:text="11111111111"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow android:layout_marginTop="40dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="手机"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:text="11111111111"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow android:layout_marginTop="40dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="邮箱"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:text="11111111111"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow android:layout_marginTop="40dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="所在地"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_adress"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:text="11111111111"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow android:layout_marginTop="40dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="详细地址"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_adressdetail"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:text="11111111111"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="20sp" />
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="100dp"
                android:background="#DAD8D9" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="32dp" >

                <TableRow android:layout_marginTop="40dp" >

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="身份证照片"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/iv_shenfenzheng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/check_it" />
                </TableRow>

                <TableRow
                    android:id="@+id/row_yingyezhizhao_photo"
                    android:layout_marginTop="40dp"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="营业执照照片"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/iv_yingyezhizhao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/check_it" />
                </TableRow>

                <TableRow
                    android:id="@+id/row_shuiwu_photo"
                    android:layout_marginTop="40dp"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="税务登记证照片"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/iv_shuiwu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/check_it" />
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="100dp"
                android:background="#DAD8D9" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="32dp"
                android:orientation="horizontal" >

                <TableRow>

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:text="用户名"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_id_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="动感科技"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow android:layout_marginTop="32dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:text="加入时间"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_jointime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="2015-1-25"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow android:layout_marginTop="32dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:text="已售出"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_has_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="55555"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow android:layout_marginTop="32dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:text="剩余库存"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_left_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="5555"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow android:layout_marginTop="32dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:text="终端开通量"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_terminal_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="555"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="20sp" />
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="100dp"
                android:background="#DAD8D9" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>