<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/F3F2F2"
    android:orientation="vertical" >

    <include layout="@layout/title_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/ddrl_width"
            android:paddingRight="@dimen/ddrl_width" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/ddimg"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginRight="@dimen/margin_left2"
                android:gravity="bottom"
                android:maxLines="2"
                android:paddingBottom="@dimen/zc_margin_top"
                android:text=""
                android:textColor="@color/text6c6c6c6"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginRight="@dimen/margin_left2"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/text6c6c6c6"
                android:textSize="12sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginRight="@dimen/margin_left2"
                android:layout_marginTop="10dp"
                android:background="@color/bgtitle" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginRight="@dimen/margin_left2"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lineSpacingExtra="6dp"
                android:text=""
                android:textColor="@color/text6c6c6c6"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>