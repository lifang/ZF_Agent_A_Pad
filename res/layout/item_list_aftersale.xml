<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
     android:orientation="vertical"
    android:descendantFocusability="blocksDescendants" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/update_data"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="item"
            android:textColor="@color/text6c6c6c6"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/terminal_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="item"
            android:textColor="@color/text6c6c6c6"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/apply_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="item"
            android:textColor="@color/text6c6c6c6"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/update_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="item"
            android:textColor="@color/text6c6c6c6"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <Button
                android:id="@+id/cancel_apply"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_right_white"
                android:gravity="center"
                android:singleLine="true"
                android:text="取消申请"
                android:textColor="@color/bgtitle"
                android:textSize="14sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/cancel_again"
                android:layout_width="100dp"
                android:layout_height="40dp"
                  android:focusable="true"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_right_bgtitle"
                android:gravity="center"
                android:singleLine="true"
                android:text="重新提交注销"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/e9e8e8" />
</LinearLayout>